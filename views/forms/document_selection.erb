<!-- Avatar upload form -->
<div class="modal fade" id="documentModal" tabindex="-1" role="dialog" aria-labelledby="documentModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="documentModalLabel">Documento a imprimir</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <select id="document_selector">
          <%= documents.map { |d| "<option value='#{d[:id]}'>#{d[:name]}</option>" } %>
        </select>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
        <button id="document-submit" type="button" class="btn btn-success text-shadow btn-shadow border border-dark border-top-0 border-right-0">Cargar</button>
      </div>

      <script type="text/javascript" charset="utf-8">
        $('#document-submit').click(function(){
          document_id = $('select#document_selector').val();
          employee_id = <%= employee[:id] %>;
          window.open('/document/print/' + document_id + '/employee/' + employee_id);
        });
      </script>
    </div>
  </div>
</div>
